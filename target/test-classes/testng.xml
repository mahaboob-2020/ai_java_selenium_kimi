<?xml version="1.0" encoding="UTF-8"?>
<!DOCTYPE suite SYSTEM "https://testng.org/testng-1.0.dtd">
<suite name="SalesforceLoginSuite" parallel="false">
    <listeners>
        <listener class-name="com.salesforce.listeners.ExtentReportListener"/>
    </listeners>
    
    <!-- Test 1: Invalid Login Tests (Always runs) -->
    <test name="InvalidLoginTest">
        <classes>
            <class name="com.salesforce.tests.LoginInvalidTest">
                <methods>
                    <include name="testInvalidUsernameAndPassword"/>
                    <include name="testEmptyUsername"/>
                    <include name="testEmptyPassword"/>
                    <include name="testEmptyUsernameAndPassword"/>
                    <include name="testInvalidEmailFormat"/>
                    <include name="testLoginPageUIElements"/>
                    <include name="testForgotPasswordLink"/>
                </methods>
            </class>
        </classes>
    </test>
    
    <!-- Test 2: Valid Login Tests (Requires real credentials in global.properties) -->
    <test name="ValidLoginTest">
        <classes>
            <class name="com.salesforce.tests.LoginValidTest">
                <methods>
                    <include name="testValidLoginWithRememberMe"/>
                    <include name="testValidLoginWithoutRememberMe"/>
                </methods>
            </class>
        </classes>
    </test>
</suite>
